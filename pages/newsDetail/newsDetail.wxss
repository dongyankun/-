.content{
  padding: 15px;
}
.title{
  padding-bottom: 10px;
  border-bottom: 1px solid #d5d5d5;
  margin-bottom: 20px;
  font-size: 20px;
  color: #333;
}
.summary{
    font-size: 16px;
    line-height: 1.75;
    color: #6e6e6e;
    background-color: #fafafa;
    padding: 10px 15px;
    border-left: 5px solid #6e6e6e;
}
.author{
  font-weight: 700;
  font-size: 16px;
  margin-top: 15px;
}
.news-content{
  font-size: 16px;
  margin:10px 0;
}
.wxParse-p{
  margin-bottom: 10px;
}
.statement{
  padding: 10px;
  font-size: 15px;
  background-color: #f9f9f9;
  border-radius: 2px;
}
.strong{
  display: inline;
  font-weight: 700;
}
.share{
  position: fixed;
  right: 20px;
  bottom: 20px;
  color: royalblue;
  font-size: 40px;
  border-radius: 50%;
  padding:0 2px;
  background-color: #FFF;
  box-shadow: 0 5px 10px #ccc;
}
.shareBtn{
  position: fixed;
  right: 20px;
  bottom: 20px;
  display: inline-block;
  width: 50px;
  height: 50px;
  background-color: transparent;
  border:none;
  outline:none;
  opacity:0;
}
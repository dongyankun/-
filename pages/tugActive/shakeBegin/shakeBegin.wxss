@import './animated.wxss';
page{
  height: 100%;
  overflow-y: hidden;
}
.bodyBg{
  height: 100%;
}
.userBox{
  position: absolute;
  right: 10px;
  top: 10px;
}
.userImg{
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 10px;
  border: 3px solid #fff;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.userName{
  display: inline-block;
  color: #fff;
  margin-top: 70px;
  font-size: 16px;
}

.countBox{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  z-index: 9;
}
.countNum{
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
  line-height: 150px;
  color: #2b3b46;
  font-size: 50px;
  position: relative;
}
.word{
  display: inline-block;
  margin-left: 5px;
  font-size: 22px;
  position: relative;
  top: -5px;
}
.bubbling{
  position: absolute;
  top:-35px;
  right: 10px;
  width: 30px;
  height: 30px;
  line-height: 30px;
  border-radius: 50%;
  color: #2b3b46;
  background-color: #fff;
  font-size: 18px;
  text-align: center;
  padding: 5px;
  animation: autoMove 1s linear;
}

.hideBubble{
  display: none;
}

.hasTime{
  text-align: center;
  margin-top: 20px;
  color: #fff;
}
.tipswprd{
   display: inline-block;
   position: relative;
}
.tips{
  text-align: center;
  color: #fff;
  margin-bottom: 0;
  font-size: 25px;
  position: relative;
}

.tips1{
  transform:rotateZ(-30deg);
}
.tips2{
  margin: 0 20px;
  top: -7px;
}
.tips3{
  transform:rotateZ(30deg);
}

.bigCircle{
  width: 600px;
  height: 600px;
  /* background-color: #f76083; */
  border-radius: 50%;
  opacity: .8;
  position: absolute;
  bottom: -300px;
  left: -300px;
}
.bigCircle01{
  width: 800px;
  height: 800px;
  /* background-color: #f76083; */
  border-radius: 50%;
  opacity: .8;
  position: absolute;
  bottom: -400px;
  right: -400px;
}

@keyframes autoMove{
  0% {
      -moz-transform: rtranslate3d(10px,-10px,0);
      -ms-transform: translate3d(10px,-10px,0);
      -webkit-transform: translate3d(10px,-20px,0);
      transform: translate3d(10px,-10px,0);
  }
  25%{
     -moz-transform: rtranslate3d(5px,-20px,0);
      -ms-transform: translate3d(5px,-20px,0);
      -webkit-transform: translate3d(5px,-20px,0);
      transform: translate3d(5px,-20px,0);
      opacity: .8
  }
  50%{
    -moz-transform: rtranslate3d(10px,-30px,0);
    -ms-transform: translate3d(10px,-30px,0);
    -webkit-transform: translate3d(10px,-30px,0);
    transform: translate3d(10px,-30px,0);
    opacity: .6
  }
  75%{
    -moz-transform: rtranslate3d(-5px,-40px,0);
    -ms-transform: translate3d(-5px,-40px,0);
    -webkit-transform: translate3d(-5px,-40px,0);
    transform: translate3d(-5px,-40px,0);
    opacity: .4
  }
  100%{
    -moz-transform: rtranslate3d(10px,-50px,0);
    -ms-transform: translate3d(10px,-50px,0);
    -webkit-transform: translate3d(10px,-50px,0);
    transform: translate3d(10px,-50px,0);
    opacity: 0
  }
}


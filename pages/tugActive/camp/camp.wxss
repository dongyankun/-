.camp{
  text-align: center;
  color: #FFF;
  margin: 20px auto;
  width: 95%;
  height: 100px;
  line-height: 100px;
  border-radius: 10px;
  font-size: 23px;
  letter-spacing: 1px;
  overflow: hidden;
  position: relative;
}
.title{
  color: #222;
  margin:50px 0 20px 15px;
  font-size: 22px;
  letter-spacing: 2px;
}
.redCamp{
  /* background-color: #f93462; */
  /* background-image: linear-gradient(90deg,#f82254,#f76083); */
  /* border: 1px solid #f33763; */
  box-shadow: 0 5px 10px #ccc;
}
.blueCamp{
  /* background-color: #0b46a9; */
  /* background-image: linear-gradient(90deg,#004ef5,#52a5f4); */
  /* border: 1px solid #2c94f5; */
  box-shadow: 0 5px 10px #ccc;
}

.portraitBox{
  text-align: center;
  width:95%;
  padding:32px 0;
  margin:10px auto;
  border-radius:20px;
  box-shadow:0 8px 10px #ccc;
}
.bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(246, 248, 251, .2)
}
.content{
  position: relative;
  z-index: 9;
}
.portrait{
  display: inline-block;
  width: 80px;
  height: 80px;
  background-color: #eee;
  border-radius: 50%;
  border: 4px solid #fff;
  box-shadow: 0 5px 10px rgb(145, 145, 145);
}

.nickname{
  /* display: inline-block; */
  color: #232323;
  margin-top: 8px;
  font-size: 16px;
  font-weight: 600;
}
.team{
  font-size:80px;
  position:absolute;
  bottom:-1px;
  left:10px;
  opacity:.6;
  transform:rotateZ(-35deg);
  font-weight: 600;
}
.loading{
  position:absolute;
  left: 0;
  top: 0;
  text-align: center;
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  z-index: 99;
}
.loadingImg{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  /* opacity: .6 */
}

.isLoading{
  text-align: center;
  font-size: 16px;
  margin-top: 60px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  color: #666;
}